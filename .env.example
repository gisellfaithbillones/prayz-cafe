# Environment Variables for Prayz Cafe
# Copy this file to .env and fill in your details

# API Configuration (if using separate API server)
# Leave empty if not using API
VITE_API_URL=http://localhost:3001

# PayMongo Configuration (if using API)
# These are only needed if you're using the API to create payment intents
# PAYMONGO_SECRET_KEY=sk_xxxxxxxxxxxxx
# PAYMONGO_PUBLIC_KEY=pk_xxxxxxxxxxxxx
# PAYMONGO_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx

# PayMongo Payment Link (if using static payment link)
# Your PayMongo payment link URL
PAYMONGO_PAYMENT_LINK=https://paymongo.page/l/the-prayz-cafe
